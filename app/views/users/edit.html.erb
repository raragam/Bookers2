<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
  </head>

  <body>

    <h1>User info</h1>
    <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

    <label>Name</label>
    <div>
      <%= f.text_field :name, autofocus: true, id:"name" %>
    </div>

    <label>Image</label>
    <div>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>

    <label>Introduction</label>
    <div>
      <%= f.text_field :introduction, autofocus: true, id:"introduction" %>
    </div>

    <div>
      <%= f.submit "Update User" %>
    </div>

    <% end %>
  </body>

  </html>