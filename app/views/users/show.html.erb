
<h1>User info</h1>
 <%= image_tag @user.get_profile_image %>

 <table>
   <tbody>
    <tr></tr>
    <tr>
    <th>name</th>
    <th><%= @user.name %></th>
    </tr>
    <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
    </tr>
   </tbody>
 </table>

<h1>New book</h1>
  <%= form_with model: @book_new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Books</h1>

      <table>

      <% @books.each do |book| %>

      <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
        <tr>
      <td>
        <%= image_tag @user.get_profile_image %>
      </td>
      <td>
        <span><%= book.title %></span>
      </td>
      <td>
        <span><%= book.body %></span>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
      </td>
        </tr>
      </tbody>

      <% end %>

      </table>