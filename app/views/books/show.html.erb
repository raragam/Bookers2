   <% end %>
   </div>

<h1>New book</h1>
  <%= form_with model: @book_new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <div>
      <%= f.submit 'Create Book' %>
    </div>

  <% end %>

