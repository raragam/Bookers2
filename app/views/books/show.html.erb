

  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <% end %>

    <div class="container px-5 px-sm-0">

    <div class="row">
      <div class="col-md-3">

  <h1>User info</h1>
 <%= image_tag @user.get_profile_image %>

 <table class="table">
   <tbody>
    <tr></tr>
    <tr>
    <th>name</th>
    <th><%= @user.name %></th>
    </tr>
    <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
    </tr>
   </tbody>
 </table>


   <% if @user == current_user %>

  <div class="row">

       <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
       <i class="fa-solid fa-user-gear"></i>

     <% end %>
   </div>

   <% else %>

   <div class="row">

       <%= link_to user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
       <i class="fa-solid fa-user-gear"></i>

     <% end %>
   </div>

   <% end %>


<h2 class="mt-3">New book</h2>
  <%= form_with model: @book_new do |f| %>
  <div class="form-group">
    <div>
      <label for="book_title">Title</label>
    </div>
    <div>
      <%= f.text_field :title, class: 'form-control book_title' %>
    </div>
  </div>

  <div class="form-group">
    <div>
      <label for="book_title">Opinion</label>
    </div>
    <div>
      <%= f.text_area :body, class: 'form-control book_body' %>
    </div>
  </div>

    <div class="form-group">

       <%= f.submit 'Create Book', class: 'btn btn-success' %>

    </div>

  <% end %>

  </div>

  <div class="col-md-8 offset-md-1">

    <h2>Book detail</h2>

      <table class="table table-hover table-inverse">

        <tbody>
        <tr>
      <td>
        <%= link_to user_path(@user.id) do %>
        <div>
          <%= image_tag @user.get_profile_image %>
        </div>
        <div>
          <%= @user.name %>
        </div>
        <% end %>

      </td>
      <td>
        <%= link_to book_path(@book.id) do %>
        <span><%= @book.title %></span>
        <% end %>
      </td>
      <td>
        <span><%= @book.body %></span>
      </td>

      　<% if @user == current_user %>

      <td>
        <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(@book.id), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "本当に消しますか？" %>
      </td>
      <% else %>
      <% end %>
        </tr>
      </tbody>

      </table>

  </div>

  </div>

  </div>

