<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
  </head>

  <body>
  <h1>Editing Book</h1>

  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <div class="field">
      <div>
        <label>Title</label>
      </div>
      <div>
        <%= f.text_field :title %>
     </div>
    </div>

    <div class="field">
      <div>
        <label>Body</label>
      </div>
      <div>
        <%= f.text_area :body %>
     </div>
    </div>

  <div class="actions">
   <%= f.submit 'Update Book' %>
  </div>

  <% end %>

  <%= link_to "Show", book_path(@book.id) %>
   |
  <a class="back" href=/books>Back</a>
</body>


</html>