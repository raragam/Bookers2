<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
  </head>

  <body>

    <h1>User info</h1>
<%= image_tag @user.get_profile_image %>

 <table>

   <tbody>
    <tr></tr>
    <tr>
    <th>name</th>
    <th><%= @user.name %></th>
    </tr>
    <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
    </tr>
   </tbody>
 </table>

 <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <div>
      <%= f.submit 'Create Book' %>
    </div>

  <% end %>

<h1>Books</h1>

  <table>

  <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <% @books.each do |book| %>

      <tbody>
        <tr>
      <td>
        <%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image %>
        <% end %>
      <td>
        <%= link_to book_path(book.id) do %>
        <span><%= book.title %></span>
        <% end %>
      </td>
      <td>
        <span><%= book.body %></span>
      </td>
        </tr>
      </tbody>

  <% end %>

   </table>

  </body>

</html>